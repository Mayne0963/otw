{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for the web application",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "pretest": "npm run build",
    "predeploy": "npm run build && npm run test:ci",
    "emulator": "firebase emulators:start",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "security:audit": "npm audit --audit-level moderate"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "stripe": "^14.17.0",
    "nodemailer": "^6.9.8",
    "@google-cloud/storage": "^7.7.0",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "joi": "^17.11.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "handlebars": "^4.7.8",
    "@google-cloud/secret-manager": "^5.0.1",
    "@google-cloud/vision": "^4.0.2",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/compression": "^1.7.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "ts-node": "^10.9.1",
    "ts-jest": "^29.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "firebase-functions-test": "^3.1.1",
    "@firebase/rules-unit-testing": "^3.0.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "nodemon": "^3.0.2",
    "nock": "^13.4.0",
    "sinon": "^17.0.1",
    "@types/sinon": "^17.0.2"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/test-setup.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/src/test/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/test/**",
      "!src/**/*.test.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}