{
    "firebase-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@gannonh/firebase-mcp"
      ],
      "env": {
        "SERVICE_ACCOUNT_KEY_PATH": "./serviceAccountKey.json",
        "FIREBASE_STORAGE_BUCKET": "otw-web.appspot.com"
      },
      "mcpServers": [
        {
          "name": "otw-server",
          "region": "us-east1",
          "type": "firebase",
          "functions": true,
          "firestore": true,
          "auth": true,
          "storage": true
        }
      ]
    }
  }